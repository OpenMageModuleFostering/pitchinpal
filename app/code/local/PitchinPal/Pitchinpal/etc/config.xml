<?xml version="1.0"?>
<config>
  <modules>
    <PitchinPal_Pitchinpal>
      <version>1.0.0.0</version>
    </PitchinPal_Pitchinpal>
  </modules>
 
  <global>
    <fieldsets>
      <sales_convert_quote_payment>
        <custom_field_one>
          <to_order_payment>*</to_order_payment>
        </custom_field_one>
        <custom_field_two>
          <to_order_payment>*</to_order_payment>
        </custom_field_two>
        <custom_paycard>
          <to_order_payment>*</to_order_payment>
        </custom_paycard>
        <custom_card_number>
          <to_order_payment>*</to_order_payment>
        </custom_card_number>
        <custom_card_month>
          <to_order_payment>*</to_order_payment>
        </custom_card_month>
        <custom_card_year>
          <to_order_payment>*</to_order_payment>
        </custom_card_year>
        <custom_card_cvv>
          <to_order_payment>*</to_order_payment>
        </custom_card_cvv>
      </sales_convert_quote_payment>
    </fieldsets>
     
    <helpers>
      <pitchinpal>
        <class>PitchinPal_Pitchinpal_Helper</class>
      </pitchinpal>
    </helpers>
 
    <blocks>
      <pitchinpal>
        <class>PitchinPal_Pitchinpal_Block</class>
      </pitchinpal>
    </blocks>
         
    <models>
      <pitchinpal>
        <class>PitchinPal_Pitchinpal_Model</class>
      </pitchinpal>
    </models>
 
    <resources>
      <pitchinpal_setup>
        <setup>
          <module>PitchinPal_Pitchinpal</module>
        </setup>
      </pitchinpal_setup>
    </resources>
  </global>
 
  <default>
    <payment>
      <pitchinpal>
        <active>1</active>
        <model>pitchinpal/paymentmethod</model>
        <order_status>pending</order_status>
        <title>PitchinPalâ„¢</title>
        <allowspecific>0</allowspecific>
        <payment_action>sale</payment_action>
      </pitchinpal>
    </payment>
  </default>
   
  <frontend>
    <routers>
      <pitchinpal>
        <use>standard</use>
        <args>
          <module>PitchinPal_Pitchinpal</module>
          <frontName>pitchinpal</frontName>
        </args>
      </pitchinpal>
    </routers>

  <layout>
            <updates>
                <pitchinpal>
                    <file>pitchinpal.xml</file>
                </pitchinpal>
            </updates>
        </layout>


  </frontend>
</config>